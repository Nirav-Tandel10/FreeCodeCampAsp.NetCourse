@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>

        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>
    <br />


<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td style="width:50%">
                    @obj.Name
                </td>

                <td style="width:30%">
                    @obj.DisplayOrder
                </td>
                <td>
                      <div class="w-75 bth-group" role="group">

                            <a asp-controller="Category" asp-action="DeletePOST" 
                            asp-route-id="@obj.ID" class="btn btn-primary mx-2"> 
                            <i class="bi bi-pencil-square"></i> &nbsp Edit
                            </a>

                            <a asp-controller="Category" asp-action="DeletePOST"
                            asp-route-id="@obj.ID" class="btn btn-danger mx-2">
                            <i class="bi bi-trash"></i> &nbsp Delete
                            </a>
                        </div>
                        
                </td>
            </tr>
        }
    </tbody>`
</table>
</div>
